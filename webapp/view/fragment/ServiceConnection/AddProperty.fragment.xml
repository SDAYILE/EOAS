<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:sap.ui.layout.form="sap.ui.layout.form">
	<Dialog title="Add New Property" 
			horizontalScrolling="true" 
			showHeader="true" 
			state="None" 
			stretch="false" 
			type="Standard" 
			verticalScrolling="true">
		<content>
			<sap.ui.layout.form:SimpleForm  editable="true" layout="ResponsiveGridLayout">
              <sap.ui.layout.form:content>
                <Label text="Unit Number"/>
                <Input xmlns="sap.m"/>
                <Label text="House Number"/>
                <Input xmlns="sap.m"/>
                <Label text="Street"/>
                <Input xmlns="sap.m"/>
                <Label text="Suburb"/>
                <Input xmlns="sap.m"/>
              </sap.ui.layout.form:content>  
            </sap.ui.layout.form:SimpleForm>
		</content>
		<beginButton>
			<Button text="Save" press="onSubmitProperty"/>
        </beginButton>
        <endButton>
			<Button text="Cancel" press="onCancelProperty"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>