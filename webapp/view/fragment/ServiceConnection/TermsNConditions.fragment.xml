<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form">
	<Dialog title="{i18n>terms}" horizontalScrolling="true" showHeader="true" state="None" stretch="false" type="Standard"
		verticalScrolling="true">
		<content>
			<Text class="sapUiSmallMarginBottom" text="{i18n>SCterms}"/>
			<Label design="Bold" text="{i18n>additionTerms}"/>
		</content>
		<beginButton>
			<Button text="{i18n>agree}" press="onAgreeTerms"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>cancel}" press="onCancelTerms"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>