<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="capetown.gov.zaEnergyApplication.controller.CredentialVerificationPage1" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page id="pgCV1" title="" showNavButton="true" navButtonPress="onNavBack">
				<headerContent>
					<Button icon="sap-icon://information" text="More Info" press="onMoreInfo"/>
				</headerContent>
				<content>
					<List headerText="{i18n>credentialMainSubTitle}" headerLevel="H2">
						<items>
							<!--<StandardListItem title="{i18n>credVInstaller}" description="{i18n>installerDescription}" type="Navigation" press="onSelectInstaller"/>-->
							<StandardListItem title="{i18n>credVElectrical}" description="{i18n>electricDescription}" type="Navigation" press="onSelectElectrical"/>
							<StandardListItem title="{i18n>credVECSA}" description="{i18n>ecsaDescription}" type="Navigation" press="onSelectECSA"/>
						</items>
						<infoToolbar>
							<OverflowToolbar>
								<Text text="{i18n>credentialSelection}"/>
							</OverflowToolbar>
						</infoToolbar>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>